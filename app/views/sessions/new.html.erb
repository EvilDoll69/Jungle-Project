<div class="container">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please login!</h3>
        </div>
        <div class="panel-body">
          
          <%= form_tag "/login" do %>
            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= text_field_tag :email, nil, class: "form-control input-sm", placeholder: "Email" %>
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">                
                <%= password_field_tag :password, nil, class: "form-control input-sm", placeholder: "Password" %>
                  
                </div>
              </div>
            </div>

            <%= submit_tag "Submit", class: "btn btn-info btn-block" %>            
          
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>



